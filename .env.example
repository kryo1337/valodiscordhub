# ===========================================
# REQUIRED - MongoDB Configuration
# ===========================================
MONGODB_URI=your_mongodb_uri_here
MONGODB_DB=your_mongodb_db_here
MONGO_INITDB_ROOT_USERNAME=your_mongo_initdb_root_username_here
MONGO_INITDB_ROOT_PASSWORD=your_mongo_initdb_root_password_here

# ===========================================
# REQUIRED - Bot Configuration
# ===========================================
# Get from https://discord.com/developers/applications -> Bot -> Token
DISCORD_TOKEN=your_discord_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# ===========================================
# REQUIRED - API Configuration
# ===========================================
API_BASE_URL=your_api_base_url_here

# Token for bot-to-API authentication (minimum 16 characters)
# Generate a secure random string: openssl rand -hex 32
BOT_API_TOKEN=your_bot_api_token_here

# ===========================================
# REQUIRED - JWT Configuration
# ===========================================
# Secret key for signing JWT tokens (minimum 32 characters)
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here

# ===========================================
# REQUIRED - Discord OAuth Configuration
# ===========================================
# Get these from https://discord.com/developers/applications -> OAuth2
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=your_discord_redirect_uri_here

# ===========================================
# OPTIONAL - Redis Configuration
# ===========================================
# Required for distributed rate limiting in production (multiple workers)
# Leave empty to use in-memory rate limiting (for local development)
# Railway Redis: redis://default:password@host:port
REDIS_URL=your_redis_url_here

# ===========================================
# OPTIONAL - Rate Limiting
# ===========================================
# Number of requests allowed per period (default: 60)
RATE_LIMIT=your_rate_limit_here
# Rate limit period in seconds (default: 60)
RATE_PERIOD=your_rate_period_here

# ===========================================
# OPTIONAL - CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# Add your frontend URL in production
CORS_ORIGINS=your_cors_origins_here

# ===========================================
# OPTIONAL - MongoDB Connection Pool
# ===========================================
# These have sensible defaults, only change if needed
# MONGO_MAX_POOL_SIZE=50
# MONGO_MIN_POOL_SIZE=5
# MONGO_MAX_IDLE_TIME_MS=30000
# MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
